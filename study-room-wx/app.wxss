page {
  height: 100%;
}
/* tab页面 */
.outermost-layer-tab {
  background-color: #c4f9db;
  background-image: linear-gradient(147deg, #c4f9db 0%, #fbf7e2 100%);
  background: #F6F6F6;
  height: 90%;
  overflow: auto;
} 
.centered {
  padding: 0 20rpx 0 20rpx;
}
/* 标题样式 */
.pt-page-title {
  position: relative;
  height: 80rpx;
  line-height: 95rpx;
  font-size: 35rpx;
  color: #333333;
  font-weight: 700;
}
.pt-page-title ::before {
  display: inline-block;
  position: relative;
  top: 5.6rpx;
  left: -1rpx;
  content: "";
  padding: 0 4rpx;
  height: 33rpx;
  border-radius: 10rpx;
  background: #17B3A3;
}